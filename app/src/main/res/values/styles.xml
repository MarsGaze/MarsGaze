    // Matheus - rovers fragment
    <style name="AppTheme.RoverCard" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/round_card_dark</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:gravity">center</item>
    </style>

    // Matheus - rovers result fragment
    <style name="AppTheme.RadioButton" parent="Theme.MaterialComponents">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="buttonTint">@color/colorAccentDark</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

